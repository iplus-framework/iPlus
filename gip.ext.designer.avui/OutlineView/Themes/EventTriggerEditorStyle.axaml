<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:gip.ext.designer.avui.Controls"
    xmlns:PropertyGrid="clr-namespace:gip.ext.designer.avui.PropertyGrid"
    xmlns:OutlineView="clr-namespace:gip.ext.designer.avui.OutlineView">

  <ControlTheme x:Key="{x:Type OutlineView:EventTriggerEditor}" TargetType="OutlineView:EventTriggerEditor">
    <Setter Property="Template">
      <ControlTemplate>
        <TabControl>
          <TabItem Header="Triggerdata">
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="30" />
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <Border Grid.ColumnSpan="2" BorderBrush="{DynamicResource ThemeBorderMidBrush}" BorderThickness="1" />
              <TextBlock Text="Property" Grid.Row="0" Grid.Column="0" />
              <ComboBox Grid.Row="0" Grid.Column="1"
                        x:Name="PART_SelectorTriggerable"
                        ItemsSource="{Binding TriggerableEvents}"
                        SelectedItem="{Binding SelectedTriggerableEvent}"
                        IsEnabled="{Binding $parent[OutlineView:EventTriggerEditor].IsTriggerEditable}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
              <!--Content="{Binding TriggerValueEditor}"-->
            </Grid>
          </TabItem>
          <TabItem Header="Enter Actions">
            <OutlineView:ActionCollectionEditor x:Name="PART_EnterActionsEditor" Margin="0,5,0,0"/>
          </TabItem>
          <TabItem Header="Exit Actions">
            <OutlineView:ActionCollectionEditor x:Name="PART_ExitActionsEditor" Margin="0,5,0,0"/>
          </TabItem>
        </TabControl>
        <!--<ControlTemplate.Triggers>
                        <Trigger Property="AreTriggerValuesValid" Value="True">
                            <Setter TargetName="PART_SetterEditor" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>-->
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>