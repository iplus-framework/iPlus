<UserControl x:Class="gip.ext.designer.avui.PropertyGrid.Editors.BrushEditor.GradientBrushEditor"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:BrushEditor="using:gip.ext.designer.avui.PropertyGrid.Editors.BrushEditor"
             >
	<DockPanel>
		<BrushEditor:GradientSlider x:Name="slider"
			DockPanel.Dock="Top"
			Brush="{Binding Brush}" />
		<BrushEditor:SolidBrushEditor Color="{Binding SelectedStop.Color, ElementName=slider}" />
	</DockPanel>
</UserControl>
