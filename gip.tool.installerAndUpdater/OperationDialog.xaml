<Window x:Class="gip.tool.installerAndUpdater.OperationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OperationDialog" Height="90" Width="250" MaxHeight="90" MaxWidth="250"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="#FF333333"
        BorderBrush="Wheat"
        BorderThickness="2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbHeader" Grid.ColumnSpan="2" Foreground="White"  Margin="5,5,0,0" />
        
        <Ellipse x:Name="elipse1" Grid.Column="0" Grid.Row="1" Height="15" Width="15"  />
        <Ellipse x:Name="elipse2" Grid.Column="1" Grid.Row="1" Height="15" Width="15"  />
        <Ellipse x:Name="elipse3" Grid.Column="2" Grid.Row="1" Height="15" Width="15"  />
        
    </Grid>
</Window>
