<UserControl x:Class="gip.core.layoutengine.avui.VBRatingControl"
			 xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:gip.core.layoutengine.avui">
	<SelectingItemsControl Name="ratingList" VerticalAlignment="Stretch">
		<ItemsPanelTemplate>
			<StackPanel Orientation="Horizontal"/>
		</ItemsPanelTemplate>
		<SelectingItemsControl.ItemTemplate>
			<DataTemplate DataType="local:RatingItem">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition />
					</Grid.RowDefinitions>
					<Viewbox Margin="2,2,0,2" Grid.Row="0" Name="first" IsVisible="{Binding !IsSelected}">
						<Path Stretch="Fill" Fill="#20404040" Stroke="#FFB0B0B0" Data="F1 M 0,10.6641L 10.1434,9.19012L 14.6797,-3.05176e-005L 19.2161,9.19012L 28.6251,10.5573L 29.3595,10.6641L 22.0196,17.8204L 23.7527,27.922L 14.6797,23.1511L 5.60684,27.922L 7.3399,17.8204L 0,10.6641 Z "/>
					</Viewbox>
					<Viewbox Margin="2,2,0,2" Grid.Row="0" Name="second" IsVisible="{Binding IsSelected}">
						<Path Stretch="Fill" Fill="Yellow" Stroke="Gold" Data="F1 M 0,10.6641L 10.1434,9.19012L 14.6797,-3.05176e-005L 19.2161,9.19012L 28.6251,10.5573L 29.3595,10.6641L 22.0196,17.8204L 23.7527,27.922L 14.6797,23.1511L 5.60684,27.922L 7.3399,17.8204L 0,10.6641 Z "/>
					</Viewbox>
				</Grid>
			</DataTemplate>
		</SelectingItemsControl.ItemTemplate>
		<SelectingItemsControl.Template>
			<ControlTemplate>
				<Border Name="Border" BorderThickness="1" BorderBrush="Transparent" Background="Transparent">
					<ItemsPresenter />
				</Border>
			</ControlTemplate>
		</SelectingItemsControl.Template>
	</SelectingItemsControl>
</UserControl>
