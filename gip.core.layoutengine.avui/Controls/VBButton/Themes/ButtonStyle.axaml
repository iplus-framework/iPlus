<ResourceDictionary
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="clr-namespace:gip.core.layoutengine.avui">

    <!-- VBButton ControlTheme -->
    <ControlTheme x:Key="{x:Type local:VBButton}" TargetType="local:VBButton">
        <Setter Property="Background" Value="{StaticResource ButtonNormalBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ButtonNormalBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource CtrlTxtEnabled}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="1"/>
        <Setter Property="ContentStroke" Value="{StaticResource ButtonNormalContentStroke}"/>
        <Setter Property="ContentFill" Value="{StaticResource ButtonNormalContentFill}"/>
        <Setter Property="Template">
            <ControlTemplate TargetType="local:VBButton">
              <!--<Grid Margin="0,0,-3,-3">-->
                <Border x:Name="BorderButton"  
                        CornerRadius="4" 
                        BorderThickness="1,1,1,1"
                        Background="{StaticResource ButtonNormalBackground}"
                        BorderBrush="{StaticResource ButtonNormalBorder}"
                        BoxShadow="3 3 3 0 #71000000"
                        Margin="0,0,3,3">
                    <Border x:Name="BorderFocus" 
                            Margin="1" 
                            BorderThickness="1" 
                            CornerRadius="4">
                        <ContentPresenter x:Name="PART_ContentPresenter"
                                          Margin="0"
                                          Content="{TemplateBinding Content}"
                                          Padding="{TemplateBinding Padding}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                          MinHeight="20"/>
                    </Border>
                </Border>
              <!--</Grid>--> 
            </ControlTemplate>
        </Setter>

        <!-- Focus State (Keyboard focus without mouse over) -->
        <Style Selector="^:focus:not(:pointerover) /template/ Border#BorderFocus">
            <Setter Property="BorderBrush" Value="{StaticResource ButtonFocusBorder}"/>
        </Style>

        <!-- Default State -->
        <Style Selector="^[IsDefault=True] /template/ Border#BorderButton">
            <Setter Property="BorderBrush" Value="{StaticResource ButtonNormalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Mouse Over State (only when not touch leave) -->
        <Style Selector="^:pointerover /template/ Border#BorderButton">
            <Setter Property="Background" Value="{StaticResource ButtonFocusBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ButtonMouseOverBorder}"/>
        </Style>
        <Style Selector="^:pointerover">
            <Setter Property="Foreground" Value="{StaticResource ButtonFocusForeground}"/>
            <Setter Property="ContentStroke" Value="{StaticResource ButtonFocusContentStroke}"/>
            <Setter Property="ContentFill" Value="{StaticResource ButtonFocusContentFill}"/>
        </Style>

        <!-- Pressed State -->
        <Style Selector="^:pressed /template/ Border#BorderButton">
            <Setter Property="Background" Value="{StaticResource ButtonPressedBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ButtonMouseOverBorder}"/>
            <Setter Property="Margin" Value="2,2,-2,-2"/>
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Foreground" Value="{StaticResource ButtonFocusForeground}"/>
            <Setter Property="ContentStroke" Value="{StaticResource ButtonPressedContentStroke}"/>
            <Setter Property="ContentFill" Value="{StaticResource ButtonPressedContentFill}"/>
        </Style>

        <!-- Disabled State -->
        <Style Selector="^:disabled /template/ Border#BorderButton">
            <Setter Property="Background" Value="{StaticResource ButtonDisabledBackground}"/>
        </Style>
        <Style Selector="^:disabled">
            <Setter Property="Foreground" Value="{StaticResource CtrlTxtDisabled}"/>
            <Setter Property="ContentStroke" Value="{StaticResource ButtonDisabledContentStroke}"/>
            <Setter Property="ContentFill" Value="{StaticResource ButtonDisabledContentFill}"/>
        </Style>
    </ControlTheme>

</ResourceDictionary>
