<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:le="clr-namespace:gip.core.layoutengine.avui"
    xmlns:local="clr-namespace:gip.core.layoutengine.avui.ganttchart">

    <Style x:Key="TimelineGanttItemStyleAero" TargetType="{x:Type local:TimelineGanttItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TimelineGanttItem}">
                    <ControlTemplate.Resources>
                        <ResourceDictionary>
                            <Style x:Key="{x:Type ToolTip}" TargetType="{x:Type ToolTip}" >
                                <Setter Property="Background" Value="Beige"></Setter>
                                <Setter Property="BorderBrush" Value="DarkRed" />
                            </Style>
                        </ResourceDictionary>
                    </ControlTemplate.Resources>
                    <ContentPresenter />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>