<ResourceDictionary
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vb="clr-namespace:gip.core.layoutengine.avui">

    <ControlTheme x:Key="{x:Type vb:VBGraphItem}" TargetType="{x:Type vb:VBGraphItem}">
        <Setter Property="MinWidth" Value="10"/>
        <Setter Property="MinHeight" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Border BorderThickness="2" CornerRadius="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition />
                                <RowDefinition Height="4" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="4" />
                            </Grid.ColumnDefinitions>
                            <vb:VBConnector Grid.Row="1" Grid.Column="0" x:Name="InL" VBContent="InL"  />
                            <vb:VBConnector Grid.Row="0" Grid.Column="1" x:Name="InT" VBContent="InT" />
                            <vb:VBConnector Grid.Row="1" Grid.Column="2" x:Name="OutR" VBContent="OutR" />
                            <vb:VBConnector Grid.Row="2" Grid.Column="1" x:Name="OutB" VBContent="OutB" />
                            <ContentPresenter Grid.RowSpan="3" Grid.ColumnSpan="3" Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                            ContentTemplate="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ParentSurface.GraphItemDataTemplateSelector}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
