<ResourceDictionary
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="clr-namespace:gip.core.layoutengine.avui">
    <ControlTheme x:Key="{x:Type local:VBHeader}" TargetType="{x:Type local:VBHeader}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Background" Value="{StaticResource AppLight}"/>
        <Setter Property="Foreground" Value="{StaticResource CtrlTxtEnabled}"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border CornerRadius="4" Margin="1"
                            x:Name="ucBorder" 
                            Background="{TemplateBinding Background}"
                            HorizontalAlignment="Left">
                        <local:VBTextBlock 
                                x:Name="ucTextblock" 
                                VerticalAlignment="Center" Margin="3,0,3,0" 
                                Text="{TemplateBinding ACCaptionTrans}"
                                Foreground="{TemplateBinding Foreground}"
                                TextWrapping="Wrap"/>
                        </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
