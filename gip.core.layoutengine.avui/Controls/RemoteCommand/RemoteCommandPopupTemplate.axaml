    <!-- Success Template (Green) -->
    <DataTemplate x:Key="RemoteCommandPopupSuccessTemplate">
        <Border Background="#E0006400"
                BorderBrush="#FF00AA00"
                BorderThickness="2"
                CornerRadius="4"
                MinWidth="120"
                MinHeight="30"
                Margin="5">
            <Border.Effect>
                <DropShadowEffect Color="Green" 
                                  Direction="315" 
                                  ShadowDepth="4" 
                                  Opacity="0.5"
                                  BlurRadius="8"/>
            </Border.Effect>

            <Grid Margin="12,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Success Icon -->
                <TextBlock Grid.Column="0"
                           Text="✓"
                           Foreground="LightGreen"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <!-- Text Content -->
                <TextBlock Grid.Column="1"
                           Text="{Binding}"
                           Foreground="White"
                           FontSize="12"
                           FontWeight="Normal"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           MaxWidth="200"/>
            </Grid>
        </Border>
    </DataTemplate>

