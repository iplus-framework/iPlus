  <ControlTheme x:Key="{x:Type local:VBTreeListView}" TargetType="local:VBTreeListView">
    <Setter Property="BorderBrush" Value="#FF828790"/>
    <Setter Property="Foreground" Value="{StaticResource TreeViewFgEnabled}"/>
    <Setter Property="Background" Value="{StaticResource TreeViewBgEnabled}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    <Setter Property="ScrollViewer.IsScrollChainingEnabled" Value="True"/>
    <Setter Property="Template">
      <ControlTemplate>
        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}" 
                Name="Bd" 
                Background="{TemplateBinding Background}">
          <ScrollViewer Background="{TemplateBinding Background}"
                        Focusable="false"
                        Padding="{TemplateBinding Padding}">
            <ItemsPresenter />
          </ScrollViewer>
        </Border>
      </ControlTemplate>
    </Setter>
    
    <!-- IsEnabled = false -->
    <Style Selector="^:disabled /template/ Border#Bd">
      <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
    </Style>
  </ControlTheme>
