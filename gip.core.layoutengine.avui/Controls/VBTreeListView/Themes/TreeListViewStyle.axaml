<ResourceDictionary
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="clr-namespace:gip.core.layoutengine.avui">



  <ControlTheme x:Key="ColumnHeaderGripperStyle" TargetType="Thumb">
    <Setter Property="Width" Value="8"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Cursor" Value="SizeWestEast"/>
    <Setter Property="Template">
      <ControlTemplate>
        <Border Padding="{TemplateBinding Padding}"
                Background="{TemplateBinding Background}"/>
      </ControlTemplate>
    </Setter>
  </ControlTheme>

  <ControlTheme x:Key="CustomHeaderStyle" TargetType="{x:Type local:GridViewColumnHeader}">
    <Setter Property="Height" Value="22" />
    <Setter Property="Padding" Value="4,4,5,4" />
    <Setter Property="Foreground" Value="Black" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <Border BorderThickness="0,0,1,1" BorderBrush="{StaticResource DataGridLineBrush}"
                  Background="{StaticResource NormalBrush}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>
              <Rectangle x:Name="BackgroundRectangle" Grid.RowSpan="2" Grid.ColumnSpan="2" 
                         Fill="{StaticResource NormalBrush}"
                         Stretch="Fill" Stroke="{StaticResource NormalBorderBrush}" StrokeThickness="1" />
              <Rectangle x:Name="HoverRectangle" Grid.RowSpan="2" Grid.ColumnSpan="2" Stretch="Fill"
                         Fill="{StaticResource HoverShineBrush}" Opacity="0" />

              <ContentPresenter Grid.ColumnSpan="2"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Margin="{TemplateBinding Padding}" />
              <Rectangle x:Name="ShineRectangle"
                         Fill="{StaticResource ShineBrush}"
                         Stretch="Fill"
                         Stroke="{StaticResource NormalBorderBrush}"
                         StrokeThickness="1" Grid.RowSpan="2" Grid.ColumnSpan="2" />
              <Path x:Name="SortArrow" Grid.Column="1" IsVisible="False"
                    VerticalAlignment="Top" Width="8" HorizontalAlignment="Right" Margin="0,2,3,0"
                    Fill="Black"
                    Stretch="Uniform"
                    Data="M -5.215,6.099L 5.215,6.099L 0,0L -5.215,6.099 Z ">
                <Path.RenderTransform>
                    <ScaleTransform ScaleX=".9" ScaleY=".9" />
                </Path.RenderTransform>
              </Path>
            </Grid>
          </Border>
          <Thumb x:Name="PART_HeaderGripper"
                 HorizontalAlignment="Right"
                 Theme="{StaticResource ColumnHeaderGripperStyle}"/>
        </Grid>
      </ControlTemplate>
    </Setter>
    
    <!-- Mouse over animations -->
    <Style Selector="^:pointerover /template/ Rectangle#HoverRectangle">
      <Style.Animations>
        <Animation Duration="0:0:0.2">
          <KeyFrame Cue="0%">
            <Setter Property="Opacity" Value="0"/>
          </KeyFrame>
          <KeyFrame Cue="100%">
            <Setter Property="Opacity" Value="1"/>
          </KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
    
    <Style Selector="^:not(:pointerover) /template/ Rectangle#HoverRectangle">
      <Style.Animations>
        <Animation Duration="0:0:0.2">
          <KeyFrame Cue="0%">
            <Setter Property="Opacity" Value="1"/>
          </KeyFrame>
          <KeyFrame Cue="100%">
            <Setter Property="Opacity" Value="0"/>
          </KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
  </ControlTheme>

