    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonComboReadonlyBackground" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#B3B3B3" Offset="0"/>
        <GradientStop Color="#ABABAB" Offset="0.5"/>
        <GradientStop Color="#9D9D9D" Offset="0.5"/>
        <GradientStop Color="#7D7D7D" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonComboDisabledBackground" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#88F2F2F2" Offset="0.15"/>
        <GradientStop Color="#88E2E2E2" Offset=".5"/>
        <GradientStop Color="#88D2D2D2" Offset=".5"/>
