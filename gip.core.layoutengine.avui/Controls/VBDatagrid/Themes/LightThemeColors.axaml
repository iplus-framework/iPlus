<ResourceDictionary
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   x:ClassModifier="internal">

  <SolidColorBrush x:Key="DataGridLineBrush" Color="#FF5D5D5D" />
  <!--Standard Vordergrundfarbe TabItem Color: -->
  <SolidColorBrush x:Key="NormalBrush" Color="#FFA2A2A2" />
  <LinearGradientBrush x:Key="SelectedBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
    <!-- Markierte Zeile -->
    <GradientStop Color="#FFFF0000"/>
    <GradientStop Color="#FFFFFFFF" Offset="1"/>
  </LinearGradientBrush>
  <Color x:Key="GlyphColor">#FFFFFFFF</Color>
  <SolidColorBrush x:Key="GlyphBrush" Color="{StaticResource GlyphColor}" />
  <SolidColorBrush x:Key="RowHeaderPathBrush" Color="#FF939393" />
  <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#FFD4D4D4" />
  <SolidColorBrush x:Key="NormalBorderBrush" Color="#FFC9C9C9" />
  <!-- Leerer Hintergrund wie TreeView: -->
  <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFAFAFA" />
  <!-- Grid-Text: -->
  <SolidColorBrush x:Key="TextBrush" Color="#FF000000" />
  <SolidColorBrush x:Key="TextBrushReadonly" Color="#FF404040" />
  <LinearGradientBrush x:Key="ShineBrush" EndPoint="0.5,0.971" StartPoint="0.5,0.042">
    <GradientStop Color="#59FFFFFF" Offset="0" />
    <GradientStop Color="#00FFFFFF" Offset="1" />
    <GradientStop Color="#26FFFFFF" Offset="0.467" />
    <GradientStop Color="#00FFFFFF" Offset="0.475" />
  </LinearGradientBrush>
  <LinearGradientBrush x:Key="HoverShineBrush" EndPoint="0.5,0.971" StartPoint="0.5,0.042">
    <GradientStop Color="#6CFF2020" Offset="0" />
    <GradientStop Color="#46FF2020" Offset="1" />
    <GradientStop Color="#46FF2020" Offset="0.467" />
    <GradientStop Color="#26FF2020" Offset="0.475" />
    <GradientStop Color="#26FF2020" Offset="0.856" />
  </LinearGradientBrush>
  <SolidColorBrush x:Key="DataGridRowInvalidBrush" Color="Red" />

  <Color x:Key="RowBgSelected">#FFD6D6D6</Color>
  <Color x:Key="RowBgSelectedEdit">#FFD6D6D6</Color>
  <Color x:Key="RowBgHover">#FFF3F3F3</Color>
  <Color x:Key="RowBgAlternate">#10000000</Color>

  <Color x:Key="CellBgSelected">#10FF0000</Color>
  <Color x:Key="CellBorderSelected">#60FF0000</Color>
  <Color x:Key="CellBgReadOnly">#80B3B3B3</Color>
  <SolidColorBrush x:Key="CellBgBrushReadOnly" Color="{StaticResource CellBgReadOnly}" />
  <Color x:Key="CellBorderSelectedReadOnly">#FFC0C0C0</Color>

  <Color x:Key="RowHeaderTriangleFillNormal">#FF000000</Color>
  <Color x:Key="RowHeaderTriangleFillSelected">#40FF0000</Color>
  <Color x:Key="RowHeaderTriangleStrokeNormal">#00000000</Color>
  <Color x:Key="RowHeaderTriangleStrokeSelected">#FFFF0000</Color>

  <!-- Fallback brushes if not defined elsewhere -->
  <SolidColorBrush x:Key="DataGridCurrencyVisualPrimaryBrush" Color="Transparent" />
  <SolidColorBrush x:Key="DataGridCellFocusVisualPrimaryBrush" Color="#FF000000" />
  <SolidColorBrush x:Key="DataGridCellFocusVisualSecondaryBrush" Color="#FF808080" />
  <SolidColorBrush x:Key="DataGridCellInvalidBrush" Color="#FFFF0000" />
  <SolidColorBrush x:Key="DataGridGridLinesBrush" Color="#FFD4D4D4" />
  
</ResourceDictionary>
