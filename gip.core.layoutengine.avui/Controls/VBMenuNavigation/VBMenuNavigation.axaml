<UserControl x:Class="gip.core.layoutengine.avui.VBMenuNavigation"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:gip.core.layoutengine.avui"
             x:Name="VBMenuNavi">
	<Grid>
		<!-- Hamburger button in top left -->
		<Button Name="HamburgerButton"
                Content="☰"
                Width="40"
                Height="40"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="OnHamburgerClick"/>

		<!-- Overlay for Side Menu (slides in from left) -->
		<Border Name="MenuOverlay"
                Background="#222"
                Width="220"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left"
                >
			<StackPanel Margin="10">
				<TextBlock Text="Menu" FontWeight="Bold" Foreground="White" FontSize="20"/>
				<Button Content="Home" Margin="0,10,0,0"/>
				<Button Content="Profile" Margin="0,10,0,0"/>
				<Button Content="Settings" Margin="0,10,0,0"/>
				<Button Content="Logout" Margin="0,10,0,0"/>
			</StackPanel>
		</Border>

		<!-- Main content (shift right when menu is open - use margin or animation for sliding) -->
		<Border Background="#EEE"
                Margin="{Binding MainContentMargin}">
			<TextBlock Text="Main Content" VerticalAlignment="Center" HorizontalAlignment="Center"/>
		</Border>
	</Grid>
</UserControl>
