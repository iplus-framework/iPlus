<ResourceDictionary
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="clr-namespace:gip.core.layoutengine.avui">

    <Style x:Key="RibbonTrayBorderStyleAero" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1,1,1,1"/>
        <Setter Property="CornerRadius" Value="6,6,6,6"/>
        <Setter Property="Background" Value="#FF808080"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <RadialGradientBrush Center="0.85,0.9" RadiusX="0.9" GradientOrigin="0.8,0.8" RadiusY="0.8" >
                    <GradientStop Color="#FFE5E5E5" Offset="0.208"/>
                    <GradientStop Color="#FFA6A6A6" Offset="0.548"/>
                    <GradientStop Color="#FF808080" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RibbonTrayBorderStyleGip" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1,1,1,1"/>
        <Setter Property="CornerRadius" Value="6,6,6,6"/>
        <Setter Property="Background" Value="#FF1A1A1A"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <RadialGradientBrush Center="0.85,0.9" RadiusX="0.9" GradientOrigin="0.8,0.8" RadiusY="0.8" >
                    <GradientStop Color="#FFC5C5C6" Offset="0.208"/>
                    <GradientStop Color="#FF666666" Offset="0.548"/>
                    <GradientStop Color="Black" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
