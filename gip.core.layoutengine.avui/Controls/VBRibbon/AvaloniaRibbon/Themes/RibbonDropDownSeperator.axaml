<ResourceDictionary xmlns="https://github.com/avaloniaui" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
										xmlns:local="clr-namespace:gip.core.layoutengine.avui.AvaloniaRibbon"
                    xmlns:converters="clr-namespace:gip.core.layoutengine.avui.AvaloniaRibbon.Converters">

  <ControlTheme x:Key="{x:Type local:RibbonDropDownSeparator}" TargetType="local:RibbonDropDownSeparator">
    <Setter Property="Template">
      <ControlTemplate>
        <Border>
          <Rectangle
                        Height="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Fill="{StaticResource SystemControlForegroundBaseMediumBrush}" />
        </Border>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>