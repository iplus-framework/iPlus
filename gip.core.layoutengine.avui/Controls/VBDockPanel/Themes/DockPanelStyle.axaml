<ResourceDictionary
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="clr-namespace:gip.core.layoutengine.avui">
    
    <ControlTheme x:Key="{x:Type local:VBDockPanel}" TargetType="local:VBDockPanel">
        <Setter Property="Background" Value="{StaticResource AppLight}" />
        
        <Style Selector="^[IsBackgroundPanel=True]">
            <Setter Property="Background" Value="{StaticResource AppDark}" />
        </Style>
        
        <Style Selector="^[IsBackgroundPanel=False]">
            <Setter Property="Background" Value="{StaticResource AppLight}" />
        </Style>
    </ControlTheme>
    
</ResourceDictionary>
