<ResourceDictionary
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="clr-namespace:gip.core.layoutengine.avui"
   xmlns:OutlineView="clr-namespace:gip.ext.designer.avui.OutlineView;assembly=gip.ext.designer.avui"
   xmlns:PropertyGrid="clr-namespace:gip.ext.designer.avui.PropertyGrid;assembly=gip.ext.designer.avui"
   xmlns:Controls="clr-namespace:gip.ext.designer.avui.Controls;assembly=gip.ext.designer.avui">

  <ControlTheme x:Key="{x:Type local:VBActionCollectionEditor}" TargetType="{x:Type local:VBActionCollectionEditor}">
    <Setter Property="FirstColumnWidth" Value="200"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid x:Name="PART_OutlineNodesContext">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="100" />
              <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="25" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="1" Height="70" VerticalAlignment="Center" Margin="5,0,5,0">
              <local:VBButton Content="Add ->" Height="23" Margin="0,5,0,0" Name="PART_AddItem" VerticalAlignment="Top" />
              <local:VBButton Content="Remove" Height="23" Margin="0,5,0,0" Name="PART_RemoveItem" VerticalAlignment="Top" />
            </StackPanel>
            <local:VBFrame Grid.Column="1" Grid.RowSpan="2" />
            <local:VBHeader ACCaption="Actions:" Grid.Column="1" Grid.Row="0"/>
              <local:VBListBox Grid.Column="1"  Grid.Row="1" x:Name="PART_OutlineList" ItemsSource="{Binding }" IsSynchronizedWithCurrentItem="True" ShowCaption="False">
                <ListBox.ItemTemplate>
                  <DataTemplate>
                    <StackPanel>
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="2*" />
                          <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <local:VBTextBlock Text="{Binding Description}"
                            TextTrimming="CharacterEllipsis"
                            VerticalAlignment="Center"
                            ToolTip.Tip="{Binding Description}"
                            Grid.Column="0" />
                        <Border Grid.Column="1"
                            HorizontalAlignment="Right">
                          <ContentPresenter x:Name="editorContainer"
                              Content="{Binding Editor}"
                              VerticalAlignment="Center"
                              Margin="3 0" />
                        </Border>
                      </Grid>
                    </StackPanel>
                  </DataTemplate>
                </ListBox.ItemTemplate>
              </local:VBListBox>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
