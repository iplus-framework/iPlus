    <!-- IsValueNull = True -->
    <Style Selector="^[IsValueNull=True] /template/ Polygon#PART_IsValueNull">
      <Setter Property="IsVisible" Value="True"/>
    </Style>

    <!-- Control Mode States -->
    <!-- Disabled + Focus -->
    <Style Selector="^:focus[ControlMode=Disabled]">
      <Setter Property="Background" Value="{StaticResource TextBoxBgDisabled}"/>
      <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderDisabled}"/>
